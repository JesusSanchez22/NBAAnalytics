                            <Image url="@../../../images/logoNBA.png" />
                        </image>
                    </ImageView>
                    <Button fx:id="btnBorrar" layoutX="13.0" layoutY="188.0" mnemonicParsing="false" onAction="#borrar" prefHeight="25.0" prefWidth="80.0" text="Borrar" textFill="#0059b3">

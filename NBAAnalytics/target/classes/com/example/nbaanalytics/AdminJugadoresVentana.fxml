               <TextField fx:id="txtEquipo" layoutX="124.0" layoutY="330.0" prefHeight="25.0" prefWidth="88.0" promptText="nombre_equipo" />
               <TextField fx:id="txtPosicion" layoutX="29.0" layoutY="330.0" prefHeight="25.0" prefWidth="88.0" promptText="posicion" />

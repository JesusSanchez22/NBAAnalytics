                    <TextField fx:id="txtCampoACambiar" layoutX="108.0" layoutY="440.0" promptText="CampoACambiar" />
                    <Button fx:id="btnDatos" layoutX="82.0" layoutY="138.0" mnemonicParsing="false" onAction="#goDatos" prefHeight="25.0" prefWidth="109.0" text="Datos" textFill="#0059b3">
